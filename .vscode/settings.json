{
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.enable": true,
	"eslint.autoFixOnSave": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		{
			"language": "typescript",
			"autoFix": true
		}
	],
	"json.schemas": [
		{
			"fileMatch": ["/packages/*markuplint/html-ls/src/permitted-content/*.json"],
			"schema": {
				"definitions": {
					"Element": {
						"oneOf": [
							{
								"type": "string",
								"pattern": "^[a-z][a-z0-9]+$"
							},
							{
								"type": "string",
								"enum": [
									"#text",
									"#phrasing",
									"#flow",
									"#interactive",
									"#heading",
									"#sectioning",
									"#metadata",
									"#transparent",
									"#script-supporting"
								]
							}
						]
					},
					"Target": {
						"oneOf": [
							{ "$ref": "#/definitions/Element" },
							{
								"type": "array",
								"items": { "$ref": "#/definitions/Element" },
								"uniqueItems": true
							}
						]
					},
					"PermittedContentSpec": {
						"type": "array",
						"items": { "$ref": "#/definitions/PermittedContent" }
					},
					"PermittedContent": {
						"type": "object",
						"oneOf": [
							{ "$ref": "#/definitions/PermittedContentRequire" },
							{ "$ref": "#/definitions/PermittedContentOptional" },
							{ "$ref": "#/definitions/PermittedContentOneOrMore" },
							{ "$ref": "#/definitions/PermittedContentZeroOrMore" },
							{ "$ref": "#/definitions/PermittedContentChoice" },
							{ "$ref": "#/definitions/PermittedContentInterleave" }
						]
					},
					"PermittedContentRequire": {
						"type": "object",
						"additionalProperties": false,
						"required": ["require"],
						"properties": {
							"require": { "$ref": "#/definitions/Target" },
							"notAllowedDescendants": {
								"type": "array",
								"items": { "$ref": "#/definitions/Element" },
								"uniqueItems": true
							},
							"max": { "type": "number" },
							"min": { "type": "number" }
						}
					},
					"PermittedContentOptional": {
						"type": "object",
						"additionalProperties": false,
						"required": ["optional"],
						"properties": {
							"optional": { "$ref": "#/definitions/Target" },
							"notAllowedDescendants": {
								"type": "array",
								"items": { "$ref": "#/definitions/Element" },
								"uniqueItems": true
							},
							"max": { "type": "number" }
						}
					},
					"PermittedContentOneOrMore": {
						"type": "object",
						"additionalProperties": false,
						"required": ["oneOrMore"],
						"properties": {
							"oneOrMore": {
								"oneOf": [
									{ "$ref": "#/definitions/Target" },
									{ "$ref": "#/definitions/PermittedContentSpec" }
								]
							},
							"notAllowedDescendants": {
								"type": "array",
								"items": { "$ref": "#/definitions/Element" },
								"uniqueItems": true
							},
							"max": { "type": "number" }
						}
					},
					"PermittedContentZeroOrMore": {
						"type": "object",
						"additionalProperties": false,
						"required": ["zeroOrMore"],
						"properties": {
							"zeroOrMore": {
								"oneOf": [
									{ "$ref": "#/definitions/Target" },
									{ "$ref": "#/definitions/PermittedContentSpec" }
								]
							},
							"notAllowedDescendants": {
								"type": "array",
								"items": { "$ref": "#/definitions/Element" },
								"uniqueItems": true
							},
							"max": { "type": "number" }
						}
					},
					"PermittedContentChoice": {
						"type": "object",
						"additionalProperties": false,
						"required": ["choice"],
						"properties": {
							"choice": {
								"type": "array",
								"items": { "$ref": "#/definitions/PermittedContentSpec" },
								"minItems": 2
							}
						}
					},
					"PermittedContentInterleave": {
						"type": "object",
						"additionalProperties": false,
						"required": ["interleave"],
						"properties": {
							"interleave": {
								"type": "array",
								"items": { "$ref": "#/definitions/PermittedContentSpec" },
								"minItems": 2
							}
						}
					}
				},
				"type": "object",
				"additionalProperties": false,
				"required": ["tag", "contents"],
				"properties": {
					"summary": { "type": "string" },
					"tag": { "type": "string" },
					"conditional": {
						"type": "array",
						"items": {
							"type": "object",
							"additionalProperties": false,
							"required": ["condition", "contents"],
							"properties": {
								"condition": {
									"type": "object",
									"oneOf": [
										{
											"additionalProperties": false,
											"required": ["hasAttr"],
											"properties": {
												"hasAttr": { "type": "string" }
											}
										},
										{
											"additionalProperties": false,
											"required": ["parent"],
											"properties": {
												"parent": { "type": "string" }
											}
										}
									]
								},
								"contents": {
									"oneOf": [
										{
											"$ref": "#/definitions/PermittedContentSpec"
										},
										{ "type": "boolean" }
									]
								}
							}
						}
					},
					"contents": {
						"oneOf": [
							{
								"$ref": "#/definitions/PermittedContentSpec"
							},
							{ "type": "boolean" }
						]
					}
				}
			}
		}
	]
}
