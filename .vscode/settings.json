{
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.enable": true,
	"files.associations": {
		".markuplintrc": "json",
		"*.schema.json": "jsonc"
	},
	"json.schemas": [
		{
			"fileMatch": ["/config.schema.json"],
			"url": "http://json-schema.org/draft-07/schema#"
		},
		{
			"fileMatch": ["/**/*.markuplintrc"],
			"url": "https://raw.githubusercontent.com/markuplint/markuplint/main/config.schema.json"
		},
		{
			"fileMatch": ["/packages/*markuplint/html-spec/src/permitted-structures/*.json"],
			"url": "/packages/@markuplint/ml-spec/schemas/permitted-structures.schema.json"
		},
		{
			"fileMatch": ["/packages/*markuplint/html-spec/src/attributes/*.json"],
			"url": "/packages/@markuplint/ml-spec/schemas/attributes.schema.json"
		},
		{
			"fileMatch": ["/packages/*markuplint/html-spec/src/wai-aria/*.json"],
			"url": "/packages/@markuplint/ml-spec/schemas/wai-aria.schema.json"
		}
	],
	"eslint.workingDirectories": [
		{
			"mode": "auto"
		}
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}
