// https://html.spec.whatwg.org/multipage/sections.html#the-footer-element
// https://www.w3.org/TR/html-aria/#el-footer
// https://w3c.github.io/html-aria/#el-footer
{
	"contentModel": {
		"contents": [
			{
				"zeroOrMore": "#flow",
				"notAllowedDescendants": ["header", "footer"]
			}
		]
	},
	"globalAttrs": {
		"#HTMLGlobalAttrs": true,
		"#GlobalEventAttrs": true,
		"#DocumentElementEventAttrs": true,
		"#ARIAAttrs": true
	},
	"attributes": {},
	"implicitRole": {
		"role": "contentinfo",
		"conditions": [
			{
				"condition": ":has(article, aside, main, nav, section, [role=article], [role=complementary], [role=main], [role=navigation], [role=region])",
				"role": false
			}
		]
	},
	"permittedRoles": {
		"roles": ["group", "presentation", "none"]
	}
}
