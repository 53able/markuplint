{
	"tag": "img",
	"attributes": [
		{
			"name": "alt",
			"type": "String"
		},
		{
			"name": "crossorigin",
			"type": "Crossorigin"
		},
		{
			"name": "decoding",
			"type": {
				"enum": ["sync", "async", "auto"]
			}
		},
		{
			"name": "height",
			"type": "Uint"
		},
		{
			"name": "ismap",
			"type": "Boolean",
			"condition": {
				"ancestor": "a[href]"
			}
		},
		{
			"name": "loading",
			"type": {
				"enum": ["eager", "lazy"]
			}
		},
		{
			"name": "referrerpolicy",
			"type": "ReferrerPolicy"
		},
		{
			"name": "sizes",
			"type": "SourceSizeList"
		},
		{
			"name": "src",
			"type": "URL",
			"required": true
		},
		{
			"name": "srcset",
			"type": "SrcSet"
		},
		{
			"name": "width",
			"type": "Uint"
		},
		{
			"name": "usemap",
			"type": "URLHash",
			"condition": {
				"ancestor": ":not(a):not(button)"
			}
		}
	]
}
