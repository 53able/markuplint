// https://html.spec.whatwg.org/multipage/grouping-content.html#the-figure-element
// https://www.w3.org/TR/html-aria/#el-figure
// https://w3c.github.io/html-aria/#el-figure
{
	"contentModel": {
		"contents": [
			{
				"interleave": [
					[
						{
							"optional": "figcaption"
						}
					],
					[
						{
							"zeroOrMore": "#flow"
						}
					]
				]
			}
		]
	},
	"globalAttrs": {
		"#HTMLGlobalAttrs": true,
		"#GlobalEventAttrs": true,
		"#DocumentElementEventAttrs": true,
		"#ARIAAttrs": true
	},
	"attributes": {},
	"implicitRole": {
		"role": "figure"
	},
	"permittedRoles": {
		// If the figure has no figcaption descendant: Any role
		"roles": true,
		"conditions": [
			// If the figure has a figcaption descendant: No role.
			{
				"condition": ":has(figcaption)",
				"roles": false
			}
		]
	}
}
