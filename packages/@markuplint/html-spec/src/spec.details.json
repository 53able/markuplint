// https://html.spec.whatwg.org/multipage/interactive-elements.html#the-details-element
// https://www.w3.org/TR/html-aria/#el-details
// https://w3c.github.io/html-aria/#el-details
{
	"contentModel": {
		"contents": [
			{
				"require": "summary"
			},
			{
				"zeroOrMore": "#flow"
			}
		]
	},
	"globalAttrs": {
		"#HTMLGlobalAttrs": true,
		"#GlobalEventAttrs": true,
		"#DocumentElementEventAttrs": true,
		"#ARIAAttrs": true
	},
	"attributes": {
		// https://html.spec.whatwg.org/multipage/interactive-elements.html#attr-details-open
		"open": {
			"type": "Boolean"
		}
	},
	"aria": {
		"implicitRole": "group",
		"permittedRoles": false,
		"properties": {
			"global": true,
			"role": "group"
		}
	}
}
