// https://html.spec.whatwg.org/multipage/tables.html#the-td-element
// https://www.w3.org/TR/html-aria/#el-td
// https://w3c.github.io/html-aria/#el-td
{
	"contentModel": {
		"contents": [
			{
				"zeroOrMore": "#flow"
			}
		]
	},
	"globalAttrs": {
		"#HTMLGlobalAttrs": true,
		"#GlobalEventAttrs": true,
		"#DocumentElementEventAttrs": true,
		"#ARIAAttrs": true,
		"#HTMLTableCellElementAttrs": ["colspan", "rowspan", "headers"]
	},
	"attributes": {},
	"aria": {
		// No corresponding role if the ancestor table element is not exposed as a role=table, grid or treegrid.
		"implicitRole": false,
		"permittedRoles": true,
		"conditions": {
			"table:is(:not([role]), [role=table]) > :is(thead, tfoot, tbody) > tr > td": {
				"implicitRole": "cell"
			},
			"table:is([role=grid], [role=treegrid]) > :is(thead, tfoot, tbody) > tr > td": {
				"implicitRole": "gridcell"
			},
			"table:is(:not([role]), [role=table], [role=grid], [role=treegrid]) > :is(thead, tfoot, tbody) > tr > td": {
				// No role if the ancestor table element has role=table, grid, or treegrid; otherwise any role.
				"permittedRoles": false
			}
		}
	}
}
