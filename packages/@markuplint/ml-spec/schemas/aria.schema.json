{
	"definitions": {
		"PermittedRoles": {
			"description": "If `true`, this mean is \"Any\". If `false`, this mean is \"No\".",
			"oneOf": [
				{
					"type": "boolean"
				},
				{
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "string"
							},
							{
								"type": "object",
								"required": ["name"],
								"minProperties": 2,
								"properties": {
									"name": { "type": "string" },
									"deprecated": { "type": "boolean", "enum": [true] }
								}
							}
						]
					}
				},
				{
					"$ref": "#/definitions/PermittedARIAAAMInfo"
				}
			]
		},
		"PermittedARIAAAMInfo": {
			"type": "object",
			"minProperties": 1,
			"additionalProperties": false,
			"properties": {
				"core-aam": {
					"type": "boolean",
					"enum": [true]
				},
				"graphics-aam": {
					"type": "boolean",
					"enum": [true]
				}
			}
		},
		"PermittedARIAProperties": {
			"description": "If set false:\n> No role or aria-* attributes",
			"oneOf": [
				{
					"type": "boolean",
					"enum": [false]
				},
				{
					"type": "object",
					"minProperties": 1,
					"additionalProperties": false,
					"properties": {
						"global": {
							"type": "boolean",
							"enum": [true]
						},
						"role": {
							"description": "Set true if the spec says \"and any aria-* attributes applicable to the allowed roles.\"",
							"oneOf": [
								{
									"type": "boolean",
									"enum": [true]
								},
								{
									"type": "string"
								},
								{
									"type": "array",
									"minItems": 1,
									"items": { "type": "string" }
								}
							]
						},
						"only": {
							"type": "array",
							"minItems": 1,
							"items": {
								"oneOf": [
									{
										"type": "string",
										"pattern": "^aria-.+"
									},
									{
										"type": "object",
										"required": ["name"],
										"additionalProperties": false,
										"properties": {
											"name": {
												"type": "string",
												"pattern": "^aria-.+"
											},
											"value": {
												"type": "string"
											}
										}
									}
								]
							}
						},
						"without": {
							"type": "array",
							"minItems": 1,
							"items": {
								"type": "object",
								"required": ["type", "name"],
								"additionalProperties": false,
								"properties": {
									"type": {
										"type": "string",
										"enum": ["not-recommended", "should-not", "must-not"]
									},
									"name": {
										"type": "string",
										"pattern": "^aria-.+"
									},
									"value": {
										"type": "string"
									},
									"alt": {
										"type": "object",
										"required": ["method", "target"],
										"additionalProperties": false,
										"properties": {
											"method": {
												"type": "string",
												"enum": ["remove-attr", "set-attr"]
											},
											"target": {
												"type": "string"
											}
										}
									}
								}
							}
						}
					}
				}
			]
		},
		"ImplicitRole": {
			"description": "If `false`, this mean is \"No corresponding role\".",
			"oneOf": [
				{
					"type": "boolean",
					"enum": [false]
				},
				{
					"type": "string"
				}
			]
		},
		"ImplicitProperties": {
			"type": "object",
			"minProperties": 1,
			"patternProperties": {
				"^aria-.+": {
					"type": "string"
				}
			}
		},
		"ARIA": {
			"type": "object",
			"additionalProperties": false,
			"required": ["implicitRole", "permittedRoles"],
			"properties": {
				"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
				"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
				"namingProhibited": { "type": "boolean", "enum": [true] },
				"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
				"properties": { "$ref": "#/definitions/PermittedARIAProperties" },
				"conditions": {
					"type": "object",
					"minProperties": 1,
					"patternProperties": {
						".+": {
							"type": "object",
							"minProperties": 1,
							"additionalProperties": false,
							"properties": {
								"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
								"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
								"namingProhibited": { "type": "boolean", "enum": [true] },
								"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
								"properties": { "$ref": "#/definitions/PermittedARIAProperties" }
							}
						}
					}
				},
				"1.2": {
					"type": "object",
					"additionalProperties": false,
					"minProperties": 1,
					"properties": {
						"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
						"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
						"namingProhibited": { "type": "boolean", "enum": [true] },
						"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
						"properties": { "$ref": "#/definitions/PermittedARIAProperties" },
						"conditions": {
							"type": "object",
							"minProperties": 1,
							"patternProperties": {
								".+": {
									"type": "object",
									"minProperties": 1,
									"additionalProperties": false,
									"properties": {
										"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
										"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
										"namingProhibited": { "type": "boolean", "enum": [true] },
										"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
										"properties": { "$ref": "#/definitions/PermittedARIAProperties" }
									}
								}
							}
						}
					}
				},
				"1.1": {
					"type": "object",
					"additionalProperties": false,
					"minProperties": 1,
					"properties": {
						"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
						"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
						"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
						"properties": { "$ref": "#/definitions/PermittedARIAProperties" },
						"conditions": {
							"type": "object",
							"minProperties": 1,
							"patternProperties": {
								".+": {
									"type": "object",
									"minProperties": 1,
									"additionalProperties": false,
									"properties": {
										"implicitRole": { "$ref": "#/definitions/ImplicitRole" },
										"permittedRoles": { "$ref": "#/definitions/PermittedRoles" },
										"implicitProperties": { "$ref": "#/definitions/ImplicitProperties" },
										"properties": { "$ref": "#/definitions/PermittedARIAProperties" }
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"type": "object",
	"properties": {
		"_": { "$ref": "#/definitions/ARIA" }
	}
}
