{
	"name": "@markuplint/ml-spec",
	"version": "1.1.0",
	"description": "Types and schema that specs of the Markup languages for markuplint",
	"repository": "git@github.com:markuplint/markuplint.git",
	"author": "Yusuke Hirao <yusukehirao@me.com>",
	"license": "MIT",
	"private": false,
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --build --watch",
		"clean": "tsc --build --clean",
		"schema": "json2ts ./schemas/permitted-structures.schema.json > ./src/permitted-structres.ts; prettier --write ./src/permitted-structres.ts; eslint --fix --config ../../../.eslintrc ./src/permitted-structres.ts"
	},
	"devDependencies": {
		"json-schema-to-typescript": "^10.1.0",
		"typescript-json-schema": "^0.47.0"
	}
}
