{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"additionalProperties": false,
	"definitions": {
		"rules": {
			"$ref": "https://raw.githubusercontent.com/markuplint/markuplint/main/packages/%40markuplint/rules/schema.json#/definitions/rules"
		}
	},
	"properties": {
		"extends": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"plugins": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "string"
					},
					{
						"type": "object",
						"required": ["name"],
						"additionalProperties": false,
						"properties": {
							"name": { "type": "string" },
							"settings": { "type": "object" }
						}
					}
				]
			}
		},
		"parser": {
			"type": "object",
			"additionalProperties": {
				"type": "string"
			}
		},
		"parserOptions": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"ignoreFrontMatter": {
					"type": "boolean"
				}
			}
		},
		"excludeFiles": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"specs": {
			"oneOf": [
				{
					"type": "object",
					"additionalProperties": {
						"type": "string"
					}
				},
				{
					"description": "This format is deprecated",
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			]
		},
		"rules": {
			"$ref": "#/definitions/rules"
		},
		"nodeRules": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "object",
						"additionalProperties": false,
						"required": ["selector", "rules"],
						"properties": {
							"selector": {
								"type": "string"
							},
							"rules": {
								"$ref": "#/definitions/rules"
							}
						}
					},
					{
						"type": "object",
						"additionalProperties": false,
						"required": ["regexSelector", "rules"],
						"properties": {
							"regexSelector": {
								"type": "string"
							},
							"rules": {
								"$ref": "#/definitions/rules"
							}
						}
					}
				]
			}
		},
		"childNodeRules": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "object",
						"additionalProperties": false,
						"required": ["selector", "rules"],
						"properties": {
							"selector": {
								"type": "string"
							},
							"inheritance": {
								"type": "boolean"
							},
							"rules": {
								"$ref": "#/definitions/rules"
							}
						}
					},
					{
						"type": "object",
						"additionalProperties": false,
						"required": ["regexSelector", "rules"],
						"properties": {
							"regexSelector": {
								"type": "string"
							},
							"inheritance": {
								"type": "boolean"
							},
							"rules": {
								"$ref": "#/definitions/rules"
							}
						}
					}
				]
			}
		}
	}
}
