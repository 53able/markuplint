{
	"extends": ["markuplint:recommended"],
	"excludeFiles": ["./008.html"],
	"rules": {
		"attr-value-quotes": { "reason": "For consistency" }
	},
	"nodeRules": [
		{
			"selector": "meta",
			"rules": {
				"attr-value-quotes": {
					"reason": "Another reason"
				}
			}
		},
		{
			"selector": "img[src$=.svg]",
			"rules": {
				"wai-aria": {
					"option": {
						"disallowSetImplicitRole": false
					}
				},
				"required-attr": "role",
				"invalid-attr": {
					"option": {
						"attrs": {
							"role": {
								"enum": ["img"]
							}
						}
					}
				}
			}
		},
		{
			"selector": ".invalid-attr",
			"rules": {
				"invalid-attr": {
					"options": {
						"allowAttrs": ["hoge"],
						"disallowAttrs": [
							{
								"name": "hoge2",
								"value": {
									"pattern": "/^[a-z]+$/"
								}
							},
							{
								"name": "hoge3",
								"value": {
									"enum": ["apple", "orange"]
								}
							}
						]
					}
				}
			}
		}
	],
	"childNodeRules": [
		{
			"selector": ".ignore",
			"inheritance": true,
			"rules": {
				"wai-aria": false
			}
		}
	]
}
