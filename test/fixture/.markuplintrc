{
	"rules": {
		"attr-duplication": true,
		"character-reference": true,
		"deprecated-attr": true,
		"deprecated-element": true,
		"doctype": true,
		"id-duplication": true,
		"permitted-contents": true,
		"required-attr": true,
		"invalid-attr": true,
		"landmark-roles": true,
		"required-h1": true,
		"class-naming": "/[a-z]+/",
		"attr-equal-space-after": true,
		"attr-equal-space-before": true,
		"attr-spacing": true,
		"attr-value-quotes": true,
		"case-sensitive-attr-name": true,
		"case-sensitive-tag-name": true,
		"indentation": "tab",
		"wai-aria": true
	},
	"nodeRules": [
		{
			"tagName": "head",
			"rules": {
				"indentation": {
					"option": {
						"indent-nested-nodes": "never"
					}
				}
			}
		},
		{
			"tagName": "body",
			"rules": {
				"indentation": {
					"option": {
						"indent-nested-nodes": "never"
					}
				}
			}
		},
		{
			"selector": "img[src$=.svg]",
			"rules": {
				"wai-aria": {
					"option": {
						"disallowSetImplicitRole": false
					}
				},
				"required-attr": "role",
				"invalid-attr": {
					"option": {
						"attrs": {
							"role": {
								"enum": [
									"img"
								]
							}
						}
					}
				}
			}
		}
	],
	"childNodeRules": [
		{
			"selector": ".ignore",
			"inheritance": true,
			"rules": {
				"wai-aria": false
			}
		}
	]
}
