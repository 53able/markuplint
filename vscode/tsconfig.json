{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"importHelpers": false,
		"outDir": "./out",
		"rootDir": "./src",
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"lib": ["esnext"],
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out"]
}
